<!-- poster -->
<image class="poster" src='{{poster}}' mode="aspectFill" />

<!-- preview -->
<view class="preview">
    <!-- user info -->
    <view class="preview-user">
        <image bindtap='toUser' class="preview-user-avatar" src='{{user.avatar}}' />
        <view bindtap='toUser' class="preview-user-name">{{user.name}}</view>
        <image bindtap='toUser' class="preview-user-rightarrow" src="/images/icon-arrow-right.png" />
        <view class="preview-user-list">
            <view bindtap='toPackage' class="preview-user-list-item">
                <image src="/images/icon-package.png" />
                <text>卡包</text>
            </view>
            <view bindtap='toOrder' class="preview-user-list-item">
                <image src="/images/icon-order.png" />
                <text>订单</text>
            </view>
            <view bindtap='toVipcode' class="preview-user-list-item">
                <image src="/images/icon-QRcode.png" />
                <text class=".name">会员码</text>
            </view>
        </view>
    </view>

    <!-- store info -->
    <view class="preview-store">
        <view class="preview-store-info">
            <text class='preview-store-info-address'>{{shop.seat_id}}</text>
            <view class='preview-store-info-detail'>
                <text>{{shop.address}}
                    {{shop.time}}
                </text>
            </view>
            <view class="preview-store-info-icon">
                <image src="/images/drink.png" mode="" />
                <text>早餐</text>
            </view>
        </view>

        <image class="preview-store-image" src="/images/store.png" mode="" />

    </view>
</view>

<!-- order bar -->
<view class="order" bindtap="toMenu">
    <image src="/images/icon-tableware.png" mode="" />
    <view class="order-content">
        <text class="CN">开始点餐\n</text>
        <text class="EN">Order Now</text>
    </view>
</view>

<!-- my card -->
<view class="mycard">
    <view class="mycard-tag">我的卡包</view>
    <view class="mycard-area">
        
        <view wx:for="{{card}}"  class="mycard-card">
            <view class="left-edge"></view>
            <view class="right-edge"></view>
            <image src="/images/card-food.png" mode="" />
            <view class="mycard-card-text">
                <view class="mycard-card-goods">香糯鲜肉粽礼盒</view>
                <view class="mycard-card-price">30元</view>
            </view>
            <view class="mycard-card-button" style="width: 70px;">立即使用</view>
        </view>
    </view>
</view>

<!-- recommand -->
<view class="recommand">
    <view class="recommand-tag">店家推荐</view>
    <view wx:for='{{recommand}}' class="recommand-card">

    </view>
</view>

<!-- endline -->
<div class="endline">
    <span class="line"></span>
    <span class="text">已经是底部了</span>
    <span class="line"></span>
</div>