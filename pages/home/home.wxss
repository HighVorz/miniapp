page {
    background-color: rgb(245, 245, 245);
}

.poster {
    width: 100%;
    height: 264px;
    margin: 0;
    display: block;
}

.preview {
    width: 90%;
    margin: -40px auto 0 auto;
}

.preview-user {
    height: 40px;
    display: flex;
    flex-direction: row;
    background-color: #efefef;
    border-radius: 12px;
}

.preview-user-avatar {
    width: 28px;
    height: 28px;
    border-radius: 14px;
    margin: 7px 0 0 16px;
}

.preview-user-name {
    font-family: -apple-system, sans-serif;
    font-size: 14px;
    width: 96px;
    height: 20px;
    margin: 10px 0 0 12px;
}

.preview-user-rightarrow {
    width: 12px;
    height: 12px;
    margin: 13px 0 0 4px;
}

.preview-user-list {
    margin-left: auto;
    display: flex;
    flex-direction: row;
}

.preview-user-list-item {
    margin: 0 20px 0 0;
    display: flex;
    flex-direction: column;
}

.preview-user-list-item image {
    width: 20px;
    height: 20px;
    margin: 4px auto 0 auto;
}

.preview-user-list-item text {
    margin: 1px auto;
    font-size: 10px;
    font-weight: bold;
}

.preview-store {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 136px;
    background-color: white;
    margin: 0 auto;
    border-radius: 0 0 12px 12px;
}

.preview-store-info {
    margin: 16px 0 0 12px;
}

.preview-store-info-address {
    font-size: 18px;
    font-weight: bold;
}

.preview-store-info-detail {
    margin-top: 14px;
    font-size: 10px;
    color: rgb(153, 153, 153);
}

.preview-store-info-icon {
    display: flex;
}

.preview-store-info-icon image {
    margin-top: 10px;
    margin-left: 12px;
    width: 12px;
    height: 12px;
    display: inline-block;
}

.preview-store-info-icon text {
    margin: 9px 0 0 12px;
    font-size: 10px;
    font-weight: bold;
}

.preview-store-image {
    width: 90px;
    height: 90px;
    margin: 23px 0 auto auto;
}

.order {
    width: 90%;
    height: 56px;
    margin: 22px auto 0 auto;
    background-color: rgb(229, 45, 45);
    border-radius: 28px;
    display: flex;
    flex-direction: row;
}

.order image {
    width: 25px;
    height: 25px;
    margin: 15px 0 0 127px;
}

.order-content {
    width: auto;
    height: 56px;
}

.order-content .CN {
    display: block;
    margin-top: 8px;
    font-size: 18px;
    color: white;
}

.order-content .EN {
    display: block;
    font-size: 13px;
    color: white;
}

.mycard {
    margin: 35px 0 0 22px;
    width: 95%;
    height: 122px;
    overflow-x: scroll;
}

.mycard-tag {
    font-size: 16px;
    font-weight: bold;
}

.mycard-area{
    width: fit-content;
    height: 98px;
    display: flex;
}

.mycard-card {
    margin-top: 4px;
    width: 332px;
    height: 98px;
    background-color: white;
    margin-right: 10px;
    border-radius: 12px;
    display: flex;
    font-display: row;
}

.mycard image {
    display: inline-block;
    width: 80px;
    height: 80px;
    margin: 12px 0 0 10px;
}

.mycard-card-text {
    margin: 17px 0 0 5px;
}

.mycard-card-goods {
    font-size: 14px;
    font-weight: bold;
}

.mycard-card-price {
    font-size: 22px;
    font-weight: bold;
    color: #d42d34;
}

.mycard-card-button {
    background-color: #d42d34;
    width: 70px;
    height: 30px;
    border-radius: 15px;
    color: white;
    margin: 37px 17px auto auto;
    font-size: 13px;
    font-weight: bold;
    text-align: center;
    line-height: 30px;
}

.recommand {
    margin: 35px 0 0 22px;
    width: 95%;
}

.recommand-tag {
    font-size: 16px;
    font-weight: bold;
}

.recommand-card {
    margin: 4px 0 12px 0;
    width: 332px;
    height: 98px;
    background-color: white;
    border-radius: 12px;
    display: flex;
    font-display: row;
}

.endline {
    width: 80%;
    height: 40px;
    line-height: 20px;
    text-align: center;
    margin: 20px auto 0 auto;
    display: flex;
    font-display: row;
}

.endline .line {
    width: 130px;
    margin-top: 10px;
    border-top: 1px solid #ccc;
}

.endline .text {
    font-size: 12px;
    margin: 0 20px 0 20px;
    width: 100px;
    color: #686868;
    vertical-align: center;
}